<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sillyskunk"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.sillyskunk.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.sillyskunk.MAINACTIVITY" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.sillyskunk.BasicInfoActivity"
            android:label="@string/title_activity_basic_info" >
            <intent-filter>
                <action android:name="com.example.sillyskunk.BASICINFO" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.sillyskunk.BasicInfoSummaryActivity"
            android:label="@string/title_activity_basic_info_summary" >
            <intent-filter>
                <action android:name="com.example.sillyskunk.BASICINFOSUMMARY" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.sillyskunk.SplashActivity"
            android:label="@string/title_activity_splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
